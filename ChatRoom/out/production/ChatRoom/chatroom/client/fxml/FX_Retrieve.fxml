<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chatroom.client.controls.RetrieveControl">
    <Label fx:id="promptMessage" alignment="CENTER" layoutY="14.0" prefHeight="20.0" prefWidth="450.0" textFill="RED"/>
    <Label layoutX="75.0" layoutY="50.0" text="账号："/>
    <TextField fx:id="userId" layoutX="150.0" layoutY="45.0" prefWidth="200.0"/>
    <Label layoutX="45.0" layoutY="100.0" text="电话号码："/>
    <TextField fx:id="phoneNumber" layoutX="150.0" layoutY="95.0" prefWidth="200.0"/>
    <Label layoutX="60.0" layoutY="150.0" text="新密码："/>
    <PasswordField fx:id="newPwd" layoutX="150.0" layoutY="145.0" prefWidth="200.0"/>
    <Label layoutX="45.0" layoutY="200.0" text="确认密码："/>
    <PasswordField fx:id="confirmPwd" layoutX="150.0" layoutY="195.0" prefWidth="200.0"/>
    <Label layoutX="60.0" layoutY="250.0" text="验证码："/>
    <TextField fx:id="codeField" layoutX="150.0" layoutY="245.0" prefWidth="100.0"/>
    <Button layoutX="186.0" layoutY="321.0" mnemonicParsing="false" onAction="#registerAction" prefWidth="100.0"
            style="-fx-background-color: #99CCFF;" text="确定" textFill="WHITE"/>
    <ImageView fx:id="verCodeImage" fitHeight="30.0" fitWidth="80.0" layoutX="270.0" layoutY="245.0"
               onMouseClicked="#verCodeMouseClicked" pickOnBounds="true" preserveRatio="true"/>
</AnchorPane>
